// tsconfig.json
{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": false,
        "outDir": "./dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "DOM",
            "ES6"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}

// esbuild.config.mjs
import esbuild from "esbuild";
import process from "process";
import builtins from "builtin-modules";

const banner =
`/*
THIS IS A GENERATED/BUNDLED FILE BY ESBUILD
if you want to view the source, please visit the github repository of this plugin
*/
`;

const prod = (process.argv[2] === 'production');

const context = await esbuild.context({
    banner: {
        js: banner,
    },
    entryPoints: ['main.ts'],
    bundle: true,
    external: [
        'obsidian',
        'electron',
        '@codemirror/autocomplete',
        '@codemirror/collab',
        '@codemirror/commands',
        '@codemirror/language',
        '@codemirror/lint',
        '@codemirror/search',
        '@codemirror/state',
        '@codemirror/view',
        '@lezer/common',
        '@lezer/highlight',
        '@lezer/lr',
        ...builtins],
    format: 'cjs',
    target: 'es2018',
    logLevel: "info",
    sourcemap: prod ? false : 'inline',
    treeShaking: true,
    outfile: 'main.js',
});

if (prod) {
    await context.rebuild();
    process.exit(0);
} else {
    await context.watch();
}

// styles.css
.zettelkasten-buttons {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    margin: 20px 0;
}

.zettelkasten-buttons button {
    padding: 10px 15px;
    border: 1px solid var(--background-modifier-border);
    background: var(--background-secondary);
    color: var(--text-normal);
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.2s;
}

.zettelkasten-buttons button:hover {
    background: var(--background-modifier-hover);
}

.zettelkasten-modal {
    max-width: 600px;
}

.connection-item {
    padding: 10px;
    border: 1px solid var(--background-modifier-border);
    border-radius: 5px;
    margin: 5px 0;
    background: var(--background-secondary);
}

.connection-similarity {
    font-size: 0.8em;
    color: var(--text-muted);
    margin-bottom: 5px;
}

.writing-topic-item {
    padding: 15px;
    border: 1px solid var(--background-modifier-border);
    border-radius: 8px;
    margin: 10px 0;
    background: var(--background-secondary);
}

.writing-topic-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.readiness-score {
    background: var(--interactive-accent);
    color: var(--text-on-accent);
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.8em;
    font-weight: bold;
}

.daily-review-section {
    margin: 20px 0;
    padding: 15px;
    border: 1px solid var(--background-modifier-border);
    border-radius: 8px;
    background: var(--background-secondary);
}

.daily-review-section h4 {
    margin-top: 0;
    color: var(--interactive-accent);
}

.note-list {
    list-style: none;
    padding: 0;
}

.note-list li {
    padding: 5px 0;
    border-bottom: 1px solid var(--background-modifier-border);
}

.note-list li:last-child {
    border-bottom: none;
}

.processing-textarea {
    width: 100%;
    min-height: 100px;
    padding: 10px;
    border: 1px solid var(--background-modifier-border);
    border-radius: 5px;
    background: var(--background-primary);
    color: var(--text-normal);
    font-family: var(--font-interface);
    resize: vertical;
}

.button-container {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    margin-top: 15px;
}

.button-container button {
    padding: 8px 16px;
    border: 1px solid var(--background-modifier-border);
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.2s;
}

.button-container button.primary {
    background: var(--interactive-accent);
    color: var(--text-on-accent);
    border-color: var(--interactive-accent);
}

.button-container button:hover {
    background: var(--background-modifier-hover);
}

.button-container button.primary:hover {
    background: var(--interactive-accent-hover);
}
